App.pyfrom flask import Flask, render_template, redirect, url_for, request
import mysql.connector
from mysql.connector import Error # Import the Error class for handling exceptions
app = Flask(_name_)
app.config['SECRET_KEY'] = '@Bunny455'
# Connect to MySQL database
def get_db_connection():

77
 try:

 connection = mysql.connector.connect(
 host='localhost',
 user='root',
 port=3306,
 password='kellen',
 database='animal_shelter_management_system'
 )
 if connection.is_connected():
 print("Connection to MySQL DB successful")
 return connection
 except Error as e:
 print(f"Error: {e}")
 return None
@app.route('/')
def index():
 return render_template("index.html")
# Route to display animals
@app.route('/animals')
def animals():
 conn = get_db_connection()
 if conn is None:
 print("Not Connected to MySQL DB")
 return "Database connection error"
 cursor = conn.cursor(dictionary=True)
 cursor.execute("SELECT * FROM Animal")
 animals = cursor.fetchall()
 cursor.close()
 conn.close()
 return render_template("animals.html", animals=animals)
78
# Route to display add animal form
@app.route('/add_animal_page')
def add_animal_page():
 return render_template("add_animal.html")
# Add new animal to the database
@app.route('/add_animal', methods=['POST'])
def add_animal():
 conn = get_db_connection()
 if conn is None:
 print("Not Connected to MySQL DB")
 return "Database connection error"
 animal_data = (
 request.form['animal_id'],
 request.form['age'],
 request.form['gender'],
 request.form['breed'],
 request.form['weight']
 )
 cursor = conn.cursor()
 cursor.execute("INSERT INTO Animal (animal_id, age, gender, breed, weight) VALUES (%s, %s, %s, %s,
%s)", animal_data)
 conn.commit()
 cursor.close()
 conn.close()
 return redirect(url_for('add_animal_page')) # Redirect back to the add animal page after submission
# Route to display health records with optional search by animal_id
@app.route('/health_records', methods=['GET', 'POST'])
def health_records():
 conn = get_db_connection()
 if conn is None:
 print("Not Connected to MySQL DB")

79
 return "Database connection error"
 cursor = conn.cursor(dictionary=True)
 if request.method == 'POST':
 search_id = request.form.get('search_id')
 cursor.execute("SELECT animal_id, date, treatment, vet_info FROM HealthRecord WHERE animal_id =
%s", (search_id,))
 else:
 cursor.execute("SELECT animal_id, date, treatment, vet_info FROM HealthRecord")
 records = cursor.fetchall()
 cursor.close()
 conn.close()
 return render_template("health_records.html", records=records)
